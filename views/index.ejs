<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notes App</title>
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="/stylesheets/style.css"> 
</head>
<body class="bg-zinc-900 text-white font-sans">

    <!-- Main Container -->
    <div class="w-full min-h-screen flex flex-col items-center p-10">
        
        <!-- Header -->
        <h1 class="text-4xl font-bold text-blue-400 mb-6">üìù Notes App</h1>

        <!-- Note Creation Form -->
        <div class="w-full max-w-lg bg-zinc-800 p-6 rounded-lg shadow-lg">
            <form action="/create" method="post" class="space-y-3">
                <input class="w-full rounded-md px-5 py-3 bg-zinc-700 text-white placeholder-gray-400 focus:ring-2 focus:ring-blue-400 focus:outline-none" 
                       type="text" placeholder="Enter title..." name="title">
                <textarea class="w-full rounded-md px-5 py-3 bg-zinc-700 text-white placeholder-gray-400 resize-none focus:ring-2 focus:ring-blue-400 focus:outline-none" 
                          placeholder="Write your note..." name="details"></textarea>
                <button type="submit" class="w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 rounded-md transition-all">
                    Create Note
                </button>
            </form>
        </div>

        <!-- Notes Display -->
        <div class="flex flex-wrap justify-center gap-6 mt-10 w-full max-w-4xl">
            <% if (files.length > 0) { %>
                <% files.forEach(function(val) { %>
                    <div class="w-72 bg-zinc-800 p-5 rounded-lg shadow-md transition-transform transform hover:scale-105">
                        <h2 class="text-xl font-semibold text-blue-300 mb-2"><%= val %></h2>
                        <a class="text-blue-400 hover:underline" href="/files/<%= val %>">Read More...</a>
                        <form action="/delete/<%= val %>" method="POST" class="mt-3">
                            <button class="w-full bg-red-500 hover:bg-red-600 text-white py-2 rounded-md transition-all" 
                                    type="submit" 
                                    onclick="return confirm('Are you sure you want to delete this note?');">
                                Delete
                            </button>
                        </form>
                    </div>
                <% }); %>
            <% } else { %>
                <h3 class="text-gray-500">No notes available. Create one!</h3>
            <% } %>
        </div>
    </div>

</body>
</html>
